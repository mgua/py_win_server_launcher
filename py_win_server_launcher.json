        "logging": {
            "enabled": true,
            "directory": ".\\logs",
            "filename": "py_win_server_launcher.log",
            "maxLogSize": "10MB",
            "maxLogFiles": 5
        },
        "terminal": {
            "launchDelay": 500,
            "titleLength": 22
        },
